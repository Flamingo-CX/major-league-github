{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug Major League Github Backend",
            "request": "launch",
            "mainClass": "cx.flamingo.analysis.MajorLeagueGithubApplication",
            "projectName": "major-league-github"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Major League Github Frontend",
            "url": "http://localhost:8451",
            "webRoot": "${workspaceFolder}/frontend",
            "preLaunchTask": "npm: dev",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*",
                "webpack:///src/*": "${webRoot}/src/*"
            },
            "runtimeArgs": ["--remote-debugging-port=9222"],
            "outFiles": ["${workspaceFolder}/frontend/dist/**/*.js"],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "trace": true
        }
    ]
} 